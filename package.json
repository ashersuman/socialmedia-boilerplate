{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "description": "This is a reference boilerplate under construction",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "copy-graphql": "copyfiles -f src/**/*.graphql dist/graphql/",
    "postbuild": "npm run copy-graphql",
    "build": "npm run build-ts && npm run postbuild",
    "test": "jest"
  },
  "keywords": [
    "backend-bolierplate",
    "node",
    "express",
    "graphql",
    "prometheus",
    "aws",
    "mongoose"
  ],
  "author": "asher",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-graphql": "^0.9.0",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.9",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-prom-bundle": "^6.6.0",
    "graphql": "^15.8.0",
    "graphql-http": "^1.22.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "prom-client": "^14.2.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/jest": "^29.5.4",
    "copyfiles": "^2.4.1",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
